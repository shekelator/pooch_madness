extends layout

block content
  h1 Matchup!

  .match.container
    .row
      .col-lg-4
        if name
          p 
            Hi #{name}
            a.btn.btn-lg.btn-primary(href='/signout') Sign out
        else
          p
            a.btn.btn-lg.btn-primary(href='/signup') Sign up

    .row
    h2 Pick the cutest to donate $1
      each dog in dogs
        .col-lg-4
          h2= dog.name
          .puppy
            img(src=dog.image width=180)
            form(method="post" action="/matchup/winner/" + dog.id)
              button(type='submit').btn.btn-sm This dog is cuter!